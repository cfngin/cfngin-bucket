# http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,py}]
charset = utf-8

[*.{md,rst,yml,yaml}}]
indent_size = 2

[*.{json,py}]
indent_size = 4

[Makefile]
indent_size = 4
indent_style = tab

[(Pipfile,requirements.txt,setup.cfn)]
indent_size=2
